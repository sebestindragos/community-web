@import './colors';

// progress bars
.progress
  background-color $grayColor
  border-radius 0
  min-height 3.5rem
.progress.selected
  background-color $grayDarkColor
  color $white

.progress-bar
  background-color $primaryColor

// stickers
.sticker
  margin 0 -15px
  background-color $bgLightColor
  display flex

// stickers
.sticker-success
  background-color $successColor
  color $grayDarkColor
.sticker-danger
  background-color $dangerColor
  color $white
.sticker-warning
  background-color $warningColor
  color $white

.sticker-title
  font-weight bold

.sticker-text
  font-size: .75rem

.sticker-icon
  fill $grayDarkColor
  font-size 1.5rem
  margin 0 .4rem
